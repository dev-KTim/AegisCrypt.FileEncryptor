<Window x:Class="FileEncryptor.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fehler"
        Height="220"
        Width="400">

    <Window.Background>
        <SolidColorBrush Color="#000000" />
    </Window.Background>

    <Window.Resources>
<!-- button style on exit -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Black"
                                BorderBrush="MediumPurple"
                                BorderThickness="3"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="MediumPurple" />
        </Style>

        <!-- style textbox (errorcode) -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Height" Value="40" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>

    
    
<!-- grid, text(style)-->
    <!-- stackpanel errorcode -->
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="ErrorTitle" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="Red" 
                       TextAlignment="Center"/>
            <TextBox Name="ErrorMessage" 
                     Margin="10"
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto" 
                     IsReadOnly="True" 
                     Width="342" 
                     Height="64" />
        </StackPanel>

        <!-- close button text(style) -->
        <Button Content="Schlie&#223;en" 
                Click="CloseButton_Click" 
                Height="28" 
                Width="78" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,10,10" />
    </Grid>
</Window>
